{{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}

<div class="text-center center-div" id="register">
    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Register</h2>
        </div>
        <form action="/register" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="name" name="name">
                <small class="form-text text-muted text-left"> </small>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="surname" name="surname">
                <small class="form-text text-muted text-left"> </small>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left"> </small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <div></div>
            <button type="submit" class="btn btn-success rounded-pill">Confirm</button>
        </form>
    </div>
</div>