<form action="/profile/edit" method="POST" autocomplete="off" >
        <input type="hidden" name="_id" value="{{client._id}}">

        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{client.name}}">
        </div>
        <div class="form-group">
            <label>Surname</label>
            <input type="text" class="form-control" name="surname"  placeholder="Surname" value="{{client.surname}}">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email"  placeholder="Email" value="{{client.email}}">
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" class="form-control" name="role"   value="{{client.role}}" disabled>
        </div>
        <div class="form-group">
            <label>Active</label>
            <input type="text" class="form-control" name="living"   value="{{client.living}}" disabled>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">Submit</button>
            <a type="submit" href="/profile/changepass/{{client._id}}" class="btn btn-danger right red">
         Change Password
    </a>
        </div>
        
        


</form>